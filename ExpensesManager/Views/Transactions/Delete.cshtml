@model ExpensesManager.Models.Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<h2><i class="bi bi-trash"></i> Delete Transaction</h2>
<hr />

<div class="alert alert-danger shadow-sm p-4 rounded">
    <h5>Are you sure you want to delete this transaction?</h5>
    <dl class="row">
        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.Category?.Name</dd>

        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Model.TransactionType?.Name</dd>

        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">$@Model.Amount</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </form>
</div>
