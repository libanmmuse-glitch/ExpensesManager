@model ExpensesManager.Models.Transaction

@{
    ViewData["Title"] = "Transaction Details";
}

<h2><i class="bi bi-info-circle"></i> Transaction Details</h2>
<hr />

<div class="card shadow-sm rounded">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>

            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.TransactionType?.Name</dd>

            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9">$@Model.Amount</dd>
        </dl>
    </div>
</div>

<p class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Back to List
    </a>
</p>
